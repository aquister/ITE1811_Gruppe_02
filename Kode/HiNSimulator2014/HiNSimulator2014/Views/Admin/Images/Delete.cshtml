@model HiNSimulator2014.Models.Image

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Image</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ImageText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageText)
        </dd>

        <dd>
            @{
                var base64 = Convert.ToBase64String(Model.ImageBlob);
                var imgSrc = String.Format("data:" + Model.MimeType + ";base64,{0}", base64);
            }

            <img style="height:auto; width:auto; max-width:250px; max-height:150px;" src="@imgSrc" id="@Model.ImageText" alt="@Model.ImageText" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
