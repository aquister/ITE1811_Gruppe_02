@model HiNSimulator2014.Models.Image

    @ViewBag.Message

<h2>Create</h2>


@using (Html.BeginForm("FileUpload", "Images", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
{
    <div>
        Image text<br />
        @Html.TextBox("imageText") <br />
        Max size is 1MB<br />
        <input type="file" name="file" id="file" style="width: 100%;" /> <br />
        <input type="submit" value="Upload" class="submit" />
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
