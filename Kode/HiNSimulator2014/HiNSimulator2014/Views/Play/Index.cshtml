
@{
    ViewBag.Title = "HiN Simulator";
}

<input type="hidden" id="currentLocationId"/>

<style>
    h4::first-letter {
        font-size: 200%;
    }
    h4 {
        text-transform: uppercase;
    }
</style>

<div style="width: 25%; height: 200px; margin-top: 2em; border: solid 1px #989595; float: right; ">
    @Html.Partial("ImageBox")
</div>

<div style="width: 75%;">
    @Html.Partial("StoryBox")
</div>

<div style="height:280px">
    <div style="width: 25%; height:100%; border: solid 1px #989595; float:right">
        @Html.Partial("ArtificialPlayers")
    </div>

    <div style="width: 50%; height:100%; border: solid 1px #989595; float: right">
        @Html.Partial("Things")
    </div>

    <div style="width: 25%; height:100%; border: solid 1px #989595;">
        @Html.Partial("Movement")
    </div>
</div>

<div style="width: 100%; height:350px; border: solid 1px #989595;">
    @Html.Partial("Chatbox")
</div>
