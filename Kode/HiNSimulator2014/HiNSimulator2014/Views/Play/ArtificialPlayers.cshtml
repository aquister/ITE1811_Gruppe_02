<script type="text/javascript">

    //Callback funksjon til kontrolleren for å hente ut alle kunstige aktører i rommet
    function listArtificialPlayers(callback)
    {
        $.ajax({
            url: "/api/ArtificialPlayer/GetArtificialPlayersInLocation",
            data: {},
            type: "GET",
            contentType: "application/json;charset=utf-8",
        }).then(function (artPlayers) {
            callback(artPlayers);
        });
    }

    //Hvis det tar tid å hente fra databasen vises det tekst info
    $(document).ready(function () {
        $("artificialplayer_list").html("Laster...");
    });

</script>

